<!-- Modify config.xml too, if you change anything here -->
<phpunit
    stopOnFailure="false">

    <filter>
        <blacklist>
            <directory suffix=".php">../../Tests</directory>
            <directory suffix=".php">../../include/lib/composer</directory>
            <directory suffix=".php">../../include/lib/psr</directory>
            <directory suffix=".php">../../include/lib/monolog</directory>
        </blacklist>
    </filter>

    <logging>
        <!-- Put in target your own dir-->
        <log type="coverage-html" target="../../../CHROME_2 Tools/CodeCoverage/" charset="UTF-8" yui="true" highlight="true"/>
    </logging>
</phpunit>